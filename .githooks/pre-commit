#!/bin/sh
# Pre-commit hook for cif-parser project
# Runs the same checks as the GitHub Actions workflow

set -e

echo "Running pre-commit checks..."

# 1. Check formatting
echo "ğŸ” Checking code formatting with cargo fmt..."
cargo fmt -- --check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi

# 2. Run clippy
echo "ğŸ” Running clippy linter..."
cargo clippy --all-features -- -D warnings
if [ $? -ne 0 ]; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi

# 3. Build the project
echo "ğŸ”¨ Building project..."
cargo build --all-features
if [ $? -ne 0 ]; then
    echo "âŒ Build failed. Please fix compilation errors."
    exit 1
fi

# 4. Run tests
echo "ğŸ§ª Running tests..."
cargo test --all-features
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix failing tests."
    exit 1
fi

# 5. Build documentation (optional, can be commented out if too slow)
echo "ğŸ“š Building documentation..."
cargo doc --no-deps --all-features
if [ $? -ne 0 ]; then
    echo "âŒ Documentation build failed."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"